{# templates/page.html.twig #}
<header class="header">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand d-flex align-items-center" href="{{ path('<front>') }}">
        {% if logo %}
          <img src="{{ logo }}" alt="Logo" class="site-logo" style="max-height:48px;">
        {% else %}
          <span class="fs-5">Simple Blog</span>
        {% endif %}
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="mainNavbar">
        {% if page.primary_menu %}
          <div class="ms-auto">
            {{ page.primary_menu }}
          </div>
        {% endif %}
      </div>
    </div>
  </nav>
</header>

<main class="container mt-4">
  <div class="row">
    <div class="col-lg-8">
      {{ page.content }}
    </div>
    <aside class="col-lg-4">
      {{ page.sidebar_first }}
    </aside>
  </div>
</main>

<footer class="footer mt-5 py-4 bg-light">
  <div class="container text-center">
    <small>&copy; {{ "now"|date("Y") }} Simple Blog</small>
  </div>
</footer>
