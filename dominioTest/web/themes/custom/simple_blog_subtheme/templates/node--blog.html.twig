{# templates/node--blog.html.twig #}
<article class="node--blog container my-4">
  <header class="mb-4">
    <h1 class="display-6">{{ label }}</h1>
    <div class="meta text-muted mb-2">
      {% if categoria_label is defined and categoria_label %}
        <span class="me-2">{{ categoria_label }}</span> |
      {% endif %}
      <span class="ms-2">{{ published_date }}</span>
    </div>
  </header>

  {% if content.field_image %}
    <div class="mb-3">
      {{ content.field_image }}
    </div>
  {% endif %}

  <div class="content">
    {{ content.body }}
  </div>
</article>
